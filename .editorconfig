# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = false

[src/*]
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
trim_trailing_whitespace = false

[*.txt]
indent_size = 2
trim_trailing_whitespace = false